{
  "manifest_version": 2,
  "name": "URL Modifier",
  "version": "1.0",
  "description": "Appends 'details/experience' to the current URL and navigates when Ctrl + Alt is pressed.",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "commands": {
    "navigateToDetails": {
      "suggested_key": {
        "default": "Ctrl+Alt+D"
      },
      "description": "Navigate to details/experience"
    }
  }
}